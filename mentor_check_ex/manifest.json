{
   "manifest_version": 3,
   "name": "MentorCheckEx",
   "version": "0.0.8",

   "action": {},
   "description": "課題レビューのチェックをする拡張機能",
   "icons": {
      "16": "img/icon-16.png",
      "32": "img/icon-32.png",
      "48": "img/icon-48.png",
      "128": "img/icon-128.png"
   },

   "permissions": ["storage", "tabs"],
   "content_scripts": [
      {
         "matches": ["https://techacademy.jp/mentor/all/*"],
         "run_at": "document_end",
         "js": ["js/class.js", "js/content.js"],
         "css": ["css/style.css"]
      },
      {
         "matches": ["https://techacademy.jp/mentor/reports/*"],
         "run_at": "document_end",
         "js": ["js/class.js", "js/content-report.js"],
         "css": ["css/override.css"]
      },
      {
         "matches": ["https://techacademy.jp/mentor/schedule/*"],
         "run_at": "document_end",
         "js": ["js/class.js", "js/content-schedule.js"],
         "css": ["css/schedule.css"]
      },
      {
         "matches": ["https://techacademy.jp/mentor/users/*"],
         "run_at": "document_end",
         "js": ["js/class.js", "js/content-users.js"],
         "css": ["css/override.css"]
      },
      {
         "matches": [
            "https://signin.aws.amazon.com/oauth*",
            "https://*.console.aws.amazon.com/console/home*"
         ],
         "run_at": "document_end",
         "js": ["js/aws.js"]
      }
   ],
   "background": {
      "service_worker": "background.js"
   },
   "options_page": "options.html",
   "web_accessible_resources": [{
      "resources": ["resources/chime.mp3"],
      "matches": ["https://techacademy.jp/*"]
   }]
}
